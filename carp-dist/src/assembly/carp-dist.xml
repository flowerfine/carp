    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>carp</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/bin</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/bin</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>../carp-server/src/main/resources</directory>
            <includes>
                <include>**/*.yml</include>
                <include>**/*.yaml</include>
                <include>**/*.xml</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>../tools/docker/mysql/init.d</directory>
            <includes>
                <include>*.sql</include>
            </includes>
            <outputDirectory>sql</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>..</directory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
            </includes>
            <outputDirectory>.</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- Jdbc plugins -->
        <fileSet>
            <directory>../carp-plugins/carp-plugin-jdbc/carp-plugin-jdbc-1/target
            </directory>
            <includes>
                <!-- !!! VERY IMPORTANT -->
                <include>*-all.jar</include>
                <include>dependencies/*.jar</include>
            </includes>
            <outputDirectory>plugins</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>../carp-plugins/carp-plugin-test/carp-plugin-test-2/target</directory>
            <includes>
                <!-- !!! VERY IMPORTANT -->
                <include>*-all.jar</include>
                <include>dependencies/*.jar</include>
            </includes>
            <outputDirectory>plugins</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>libs</outputDirectory>
            <excludes>
                <exclude>cn.sliew:carp-dist</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
